<div class="container-fluid">
    <div class="row rowBox" >
        <div class="col-md-3 col-sm-12"></div>
        <div class="col-md-6 col-sm-12">
            <div class="card card-shadow">
                <div class="card-header" style="background-color:teal">
                    <legend class="text-center" data-bs-toggle="collapse" href="#collapseRaise" role="button" aria-expanded="false" aria-controls="collapseExample">Raise new order</legend></br>
                </div>
                <div class="card-body collapse" id="collapseRaise">
                    <form id="disForm" >
                        <div class="row .navbar-brand " >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Order Number</a>
                            <label for="orderNumber" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="orderNumber" aria-describedby="orderNumber" placeholder="123">
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Product</a>
                            <label for="product" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="product" aria-describedby="carMake" placeholder="Onion">
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Quantity</a>
                            <label for="quantity" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="quantity" aria-describedby="carModel" placeholder="5 kg">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Buyer Name</a>
                            <label for="buyerName" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="buyerName" aria-describedby="carColour" placeholder="Farhana">
                            </div>
                        </div>
                        </br>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                                <button type="submit" onclick="createOrder(event)" class="btn btn-fill btn-secondary rounded-pill">Raise Order</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-12"></div>
    </div>
</div>
